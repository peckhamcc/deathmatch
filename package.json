    "file-loader": "^6.2.0",
    "firebase-tools": "^9.23.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.0.0",
    "image-webpack-loader": "^8.0.1",
