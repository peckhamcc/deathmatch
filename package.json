{
  "name": "deathmatch",
  "version": "1.0.0",
  "description": "A turbo trainer based game for two or more players",
  "homepage": "https://peckhamcc.github.com/deathmatch",
  "author": "Alex Potsides",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/peckhamcc/deathmatch"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peckhamcc/deathmatch/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:demo": "npm run clean && webpack --config webpack.config.demo.cjs",
    "build": "npm run clean && webpack --config webpack.config.cjs",
    "start": "DEBUG=*,-babel,-express:*,-engine:*,-engine,-socket.io:*,-send,-socket.io-parser node --abort-on-uncaught-exception server",
    "watch": "npm run clean && (webpack --progress --colors --watch & DEBUG=deathmatch:* node server)",
    "demo": "npm run clean && (webpack --config webpack.config.demo.cjs --progress --colors --watch & node server)",
    "deploy": "NODE_ENV=production npm run build && NODE_DEBUG=gh-pages gh-pages -d dist",
    "lint": "standard"
  },
  "browser": {
    "./server/lights.js": "./src/socket/demo/lights.js"
  },
  "pre-commit": [
    "lint"
  ],
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/core": "^4.12.3",
    "@serialport/parser-readline": "^9.2.4",
    "babel-runtime": "^6.11.6",
    "express": "^4.16.2",
    "firmata": "^2.3.0",
    "json-stringify-safe": "^5.0.1",
    "konva": "^3.2.3",
    "less": "^4.1.2",
    "matter-js": "^0.17.1",
    "p-queue": "^7.1.0",
    "postcss-reporter": "^7.0.4",
    "prop-types": "^15.3.2",
    "range-map": "^1.0.3",
    "react": "16.8.x",
    "react-dom": "16.8.x",
    "react-konva": "^16.8.6",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "serialport": "^9.2.8",
    "serve-static": "^1.13.1",
    "shortid": "^2.2.8",
    "socket.io": "^4.4.0",
    "socket.io-client": "^4.4.0",
    "styled-components": "^5.3.3",
